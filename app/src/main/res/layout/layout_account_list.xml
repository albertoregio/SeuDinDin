<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="true"
    android:id="@+id/account_list_layout"
    >

    <RelativeLayout
        android:id="@+id/account_list_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp">

        <ImageView
            android:id="@+id/account_list_image"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shape_circle" />

        <TextView
            android:id="@+id/account_detail_initials_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="CC"
            android:textAppearance="@style/InitialsText" />
    </RelativeLayout>

    <TextView
        android:id="@+id/account_list_name"
        style="@style/ItemListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/account_list_icon_layout"
        android:layout_marginStart="16dp"
        android:text="TextView" />

</RelativeLayout>